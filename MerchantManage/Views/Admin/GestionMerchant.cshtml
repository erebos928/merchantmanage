@using MerchantManage.Models
@{
        Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html >
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div>
        <table class="table table-striped table-hover table-responsive" >
            <tr>
                <th> Merchant ID </th>
                <th> Merchant Name </th>
                <th> URI </th>
                <th> UserName </th>
                <th> Logo </th>
                <th> Description </th>
                <th> Action </th>
                
            </tr>
            @if (ViewBag.Results != null)
            {
                foreach (var mer in ViewBag.Results)
                {
                    <tr>
                        <td> @mer.merid </td>
                        <td> @mer.mername </td>
                        <td> @mer.uri </td>
                        <td> @mer.username </td>
                        <td> @mer.logo </td>
                        <td> @mer.description </td>
                        <td>
                            @Html.ActionLink("Edit", "/EditMerchant", new { id = mer.merid }) |
                            @Html.ActionLink("Delete", "/DeleteMerchant", new { id = mer.merid })
                        </td>

                    </tr>
                }
            }
            
        </table>
        <script type="text/javascript">
            $(document).ready(function () {
              $('#btnajouter').click(function (e)
              {
                    location.href = '@Url.Content("~/Admin/AddMerchant/")';
              });
            });
        </script>
        <input id='btnajouter' type="button" value="Add Merchant" />
        
    </div>
</body>
</html>
